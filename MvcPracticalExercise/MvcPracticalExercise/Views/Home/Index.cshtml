<body class="bg-info">
  <div class="row no-gutters m-3">
    <div class="card col-sm-20 col-med-18 col-lg-16 mx-auto shadow">
      <br />
      <br />
      <div class="card-header text-center">
        <div class="card col-md-12 bg-primary">
          <h3 class="font-weight-bold">Car Insurance Quote</h3>
        </div>
      </div>
      <hr />
      <hr />


      <div class="card-body">

        <div class="row no-gutters">
          @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
          {

            <div class="form-group col-md-12">
              <input name="FirstName" type="text" class="form-control" placeholder="First Name" required />
            </div>

            <div class="form-group col-md-12">
              <input name="LastName" type="text" class="form-control" placeholder="Last Name" required />
            </div>

            <div class="form-group col-md-12">
              <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" required />
            </div>

            <div class="form-group col-md-12">
              <input name="DateOfBirth" type="date" class="form-control" placeholder="Date Of Birth" required />
            </div>

            <div class="form-group col-md-12">
              <input name="CarYear" type="text" class="form-control" placeholder="Car Year" required />
            </div>

            <div class="form-group col-md-12">
              <input name="CarMake" type="text" class="form-control" placeholder="Car Make" required />
            </div>

            <div class="form-group col-md-12">
              <input name="CarModel" type="text" class="form-control" placeholder="Car Model" required />
            </div>

            <div class="form-group col-md-12">
              <input name="DUI" type="text" class="form-control" placeholder="Do you have any DUIs yes/no" required />
            </div>

            <div class="form-group col-md-12">
              <input name="Tickets" type="text" class="form-control" placeholder="How many tickets do you have" required />
            </div>

            <div class="form-group col-md-12">
              <input name="CoverageType" type="text" class="form-control" placeholder="Coverage type- either Full or Liability" required />
            </div>

            <button type="submit" class="btn btn-block btn-success">Submit</button>
          }
        </div>
      </div>
    </div>
  </div>
</body>